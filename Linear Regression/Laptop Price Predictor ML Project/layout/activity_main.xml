<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#943D46FF"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Laptop Price Prediction App - Ayush VaZe"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner
                android:layout_marginTop="20dp"
                android:id="@+id/spinnerCompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:hint="Select Brand"/>

            <!-- TypeName Input -->
            <Spinner
                android:id="@+id/spinnerTypeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:hint="@string/select_type_name"/>

            <!-- RAM Input -->
            <Spinner
                android:id="@+id/spinnerRam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:hint="@string/select_type_name"/>

            <!-- Weight Input -->
            <EditText
                android:id="@+id/inputWeight"
                android:layout_width="match_parent"
                android:background="@drawable/etbg"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Weight of the Laptop"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:textColorHint="#6F6F6F"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- Touchscreen Input -->
            <Spinner
                android:id="@+id/spinnerTouchScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_touchscreen" />

            <!-- IPS Spinner -->
            <Spinner
                android:id="@+id/spinnerIps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_ips" />

            <!-- Screen Size Spinner -->
            <Spinner
                android:id="@+id/spinnerScreenSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_screen_size" />

            <!-- Screen Resolution Spinner -->
            <Spinner
                android:id="@+id/spinnerScreenResolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_screen_resolution" />

            <!-- CPU Spinner -->
            <Spinner
                android:id="@+id/spinnerCpu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_cpu" />

            <!-- SSD Spinner -->
            <Spinner
                android:id="@+id/spinnerSSD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_ssd" />

            <!-- HDD Spinner -->
            <Spinner
                android:id="@+id/spinnerHDD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_hdd" />

            <!-- GPU Spinner -->
            <Spinner
                android:id="@+id/spinnerGpu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_gpu" />

            <!-- OS Spinner -->
            <Spinner
                android:id="@+id/spinnerOs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:padding="10dp"
                android:popupBackground="@drawable/spinner_popup_background"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:prompt="@string/select_os" />

            <!-- Predict Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPredict"
                android:layout_width="match_parent"
                android:layout_marginBottom="50dp"
                android:background="@drawable/btnbg"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="30dp"
                android:text="@string/predict" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:id="@+id/showPrice"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
